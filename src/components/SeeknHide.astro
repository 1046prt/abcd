---
// InvisibleVarnmala.astro
const letters = Array.from({ length: 26 }, (_, i) => String.fromCharCode(65 + i));
---

<div class="container">
 
  <main id="main">
    {letters.map(letter => (
      <div class="word">
        <span class="letter">{letter}</span>
      </div>
    ))}
  </main>
</div>

<style>
  /* Global Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Full-page container with padding */
  .container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    padding: 20px;
  }

  header {
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: #333;
  }

  /* Horizontal layout with wrapping */
  main {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    justify-content: center;
    padding: 10px;
  }

  /* Each letter card */
  .word {
    width: 200px;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10rem;
    font-weight: bold;
    /*text-transform: uppercase;*/
    background: linear-gradient(45deg, #0b1f54, #305697);
    border-radius: 8px;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    font-style: Arial;
  }

  /* Letter styling */
  .letter {
    opacity: 0;
    color: white;
    transition: opacity 0.3s ease-in-out;
  }

  /* Make letter visible (triggered by hover) */
  .word:hover {
    background: linear-gradient(45deg, #1b75b0, #305697);
  
  
   .letter {
    opacity: 1;
   
   }
  }
  /* For key press: change background color when showing */
  .word.active {
    background: linear-gradient(45deg, #3cb6d8, #55c4dd);
  }

  .word.active .letter {
    opacity: 1;
  }
</style>

<script>
  const main = document.getElementById("main");
  const words = document.querySelectorAll(".word");

  function showLetter(letter: string) {
    words.forEach(word => {
      const letterElement = word.querySelector(".letter");
      if (letterElement && letterElement.textContent === letter.toUpperCase()) {
        word.classList.add("active");
        setTimeout(() => {
          word.classList.remove("active");
        }, 2000);
      }
    });
  }

  // Listen for keydown events
  document.addEventListener("keydown", (e) => {
    if (/^[a-zA-Z]$/.test(e.key)) {
      showLetter(e.key);
    }
  });
</script>