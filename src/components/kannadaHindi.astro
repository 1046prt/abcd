import "@/assets/styles/kannada.css";
interface LetterPair {
  hindi: string;
  kannada: string;
  marathi: string;
  gujarati: string;
  punjabi: string;
  malayalam: string;
  bengali:string;
  assamese: string; // New field
  manipuri: string; // New field
  english: string;
  type: "vowel" | "consonant" | "separator";
}

// Generate unicode characters for Hindi and Kannada
const generateLetters = (startCode: number, length: number, extraKeys: number[] = []): string[] =>
  Array.from({ length }, (_, i) => String.fromCodePoint(startCode + i)).filter(
    (_, index) => !extraKeys.includes(startCode + index)
  );

// Updated English equivalents with more accurate transliterations
const englishVowels = ["a", "ā", "i", "ī", "u", "ū", "e", "ai", "o", "au", "aṃ", "aḥ"];

const englishConsonants = [
  "ka",
  "kha",
  "ga",
  "gha",
  "ṅa",
  "ca",
  "cha",
  "ja",
  "jha",
  "ña",
  "ṭa",
  "ṭha",
  "ḍa",
  "ḍha",
  "ṇa",
  "ta",
  "tha",
  "da",
  "dha",
  "na",
  "pa",
  "pha",
  "ba",
  "bha",
  "ma",
  "ya",
  "ra",
  "la",
  "va",
  "śa",
  "ṣa",
  "sa",
  "ha",
  "ḷa"
];
const hindiVowels = generateLetters(2309, 16, [2317, 2321]);
const hindiConsonants = generateLetters(2325, 37);
const kannadaVowels = generateLetters(3205, 16, [3213, 3217]);
const kannadaConsonants = generateLetters(3221, 37);
const gujaratiVowels = generateLetters(0xA85, 16, [0xA8D, 0xA91]);
const gujaratiConsonants = generateLetters(0xA95, 37);
const punjabiVowels = generateLetters(2565, 12, [2575, 2579]); // Punjabi has 10 vowels + 2 extras
const punjabiConsonants = generateLetters(0xA15, 37); // 35 consonants in Gurmukhi
const malayalamVowels = generateLetters(0xD05, 16, [0xD0D, 0xD11]);
const malayalamConsonants = generateLetters(0xD15, 42); // Malayalam has more consonants
const bengaliVowels = generateLetters(0x985, 16, [0x98D, 0x991]);
const bengaliConsonants = generateLetters(0x995, 37);
const assameseVowels = generateLetters(0x985, 16, [0x98D, 0x991]); // Same as Bengali but may differ in some characters
const assameseConsonants = generateLetters(0x995, 45); // Assamese has some additional consonants
// Manipuri (Meitei Mayek) Unicode ranges
const manipuriVowels = generateLetters(0xABC0, 8); // Basic vowels in Meetei Mayek
const manipuriConsonants = generateLetters(0xABD0, 27); // 27 consonants in Meetei Mayek
// Create letter pairs with all three scripts
const letterPairs: LetterPair[] = [
  ...hindiVowels.map((hindi, i) => ({
    hindi,
    marathi: hindi,
    kannada: kannadaVowels[i],
    gujarati: gujaratiVowels[i], // New
    punjabi: punjabiVowels[i] || "", // New
    malayalam: malayalamVowels[i], // New
    bengali: bengaliVowels[i] || "", // New
    assamese: assameseVowels[i] || "", // New
    manipuri: manipuriVowels[i] || "", // New
    english: englishVowels[i] || "",
    type: "vowel" as const
  })),
  ...hindiConsonants.map((hindi, i) => ({
    hindi,
    marathi: hindi,
    kannada: kannadaConsonants[i],
    gujarati: gujaratiConsonants[i], // New
    punjabi: punjabiConsonants[i] || "", // New
    malayalam: i < malayalamConsonants.length ? malayalamConsonants[i] : "", // New
    bengali: bengaliConsonants[i], // New
    assamese: i < assameseConsonants.length ? assameseConsonants[i] : "", // New
    manipuri: i < manipuriConsonants.length ? manipuriConsonants[i] : "", // New
    english: englishConsonants[i] || "",
    type: "consonant" as const
  }))
];

const languages = [
  { code: "PL", name: "Select Primary Language" , disabled:true },
  { code: "hi", name: "हिंदी" },
  { code: "mr", name: "मराठी" },  // New
  { code: "kn", name: "ಕನ್ನಡ" },
  { code: "gu", name: "ગુજરાતી" }, // New
  { code: "pa", name: "ਪੰਜਾਬੀ" }, // New
  { code: "ml", name: "മലയാളം" }, // New
  { code: "bn", name: "বাংলা" }, // New
  { code: "as", name: "অসমীয়া" }, // New
  { code: "mni", name: "ꯃꯤꯇꯩꯂꯣꯟ" }, // New - Manipuri in Meetei Mayek
  { code: "en", name: "English" }
];
const languages2 = [
  { code: "SL", name: "Select Secondary Language" , disabled:true },
  { code: "hi", name: "हिंदी" },
  { code: "mr", name: "मराठी" },  // New
  { code: "kn", name: "ಕನ್ನಡ" },
  { code: "gu", name: "ગુજરાતી" }, // New
  { code: "pa", name: "ਪੰਜਾਬੀ" }, // New
  { code: "ml", name: "മലയാളം" }, // New 
  { code: "bn", name: "বাংলা" }, // New
  { code: "as", name: "অসমীয়া" }, // New
  { code: "mni", name: "ꯃꯤꯇꯩꯂꯣꯟ" }, // New - Manipuri in Meetei Mayek
  { code: "en", name: "English" }
];
let selectedLanguage1 = "hi";
let selectedLanguage2 = "kn";

const getLetterForLanguage = (pair: LetterPair, langCode: string): string => {
  switch (langCode) {
    case "hi":
      return pair.hindi;
    case "mr":
      return pair.marathi;  // New
    case "kn":
      return pair.kannada;
    case "gu":
      return pair.gujarati; // New
    case "pa":
      return pair.punjabi; // New
    case "ml":
      return pair.malayalam; // New
    case "bn":
      return pair.bengali; // New
    case "as":
      return pair.assamese; // New
    case "mni":
      return pair.manipuri; // New
    case "en":
      return pair.english;
    default:
      return "";
  }
};
---

<div class="language-letters-container">
  <!-- Dropdown Section -->
  <div class="toggle-container">
    <div class="dropdown-wrapper">
      <label id="lang1Label" class="dropdown-label language-label active">
PRIMARY LANGUAGE
      </label>
      <select id="languageDropdown1">
        
        { 
          languages.map((lang) => (
            <option class="opt" value={lang.code} selected={lang.code === selectedLanguage1}  disabled={lang.disabled ? 'disabled' : null}>
              {lang.name} ({lang.code.toUpperCase()})
            </option>
          ))
        }
      </select>
    </div>
<!-- Add this swap button -->
  <button id="toggleButton" class="toggle-button" aria-label="Swap languages" title="Swap languges">
<svg  xmlns="http://www.w3.org/2000/svg" width="24" height="24"  
fill="currentColor" viewBox="0 0 24 24" >
