---
import logo from '@/assets/icons/logo.svg'; 
const githubUrl = "https://github.com/recursivezero/abcd"; 
const siteUrl = "https://abcdkbd.com";
const logoAlt = "abcdkbd";
---

<style>
.mobile-splash {
  display: none;
}

@media (max-width: 768px) {
  html,
  body {
    overflow: hidden;
    height: 100%;
  }

  .mobile-splash {
    display: flex;
    position: fixed;
    inset: 0;
    z-index:9999;
    background-color: light-dark(#f4f4f2,  #090808);
    justify-content: center;
    align-items: center;
    padding: 1rem;
    transition: background-color 0.3s ease;
  }

  .splash-card {
    background-color: light-dark(#ffffff, #0f172a);
    padding: 2rem;
    margin-bottom: 0.5vh;
    border-radius: 1rem;
    box-shadow: light-dark(
      0 10px 30px rgba(0, 0, 0, 0.1),
      0 10px 30px rgba(0, 0, 0, 0.3)
    );
    text-align: center;
    max-width: 400px;
    width: 100%;
    border: light-dark(none, 1px solid #404040);
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
  }

  .logo {
    width: 60px;
    margin-bottom: 1rem;
    margin-left: 40%;
    filter: light-dark(none, brightness(0.9));
    transition: filter 0.3s ease;
  }

  h1 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: light-dark(#222222, #e0e0e0);
    transition: color 0.3s ease;
  }

  p {
    font-size: 0.95rem;
    color: light-dark(#555555, #b0b0b0);
    margin-bottom: 1.5rem;
    transition: color 0.3s ease;
  }

  .buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1rem;
    text-decoration: none;
    border-radius: 8px;
    font-weight: bold;
    text-align: center;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .primary {
    background-color: light-dark( #0f172a, #3b82f6);
    color: light-dark(#ffffff, #f0f0f0);
  }

  .primary:hover {
    background-color: light-dark( #0f172a, #6a7e62);
    transform: translateY(-1px);
  }

  .secondary {
    border: 2px solid light-dark( #0f172a, #3b82f6);
    color: light-dark( #0f172a,  #3b82f6);
    background-color: light-dark(#ffffff, transparent);
  }

  .secondary:hover {
    background-color: light-dark(#f8f9f8, rgba(90, 110, 82, 0.1));
    transform: translateY(-1px);
  }

  .btn:hover {
    opacity: 0.9;
  }

}
</style>

<div class="mobile-splash">
  <div class="splash-card">
    <img src={logo.src} alt={logoAlt} class="logo" />
    <h1><strong>abcdkbd is best experienced on desktop</strong></h1>
    <p>
      Revisit on desktop to check out abcdkbd.com. We will optimize for mobile soon. Stay tuned‚Ä¶
    </p>
    <div class="buttons">
      <a href={githubUrl} class="btn primary" target="_blank" rel="noopener">üîó GitHub</a>
      <a href={siteUrl} class="btn secondary" target="_blank" rel="noopener">üåê Visit abcdkbd.com</a>
    </div>
  </div>
</div>