---
import type { LetterEntity } from "@/types";

type Props = {
  item: LetterEntity;
};

const {
  item: { letter, code }
} = Astro.props;
---

<div class="letter">
  <p class="character">{letter}</p>
  <p data-id="tgt" class="code" title="Click to copy">&copy;</p>
  <def data-id="def" class="help" title="Definition">{code}</def>
</div>
