---
import contributors from "@/data/contributor.json";
import GitHub from "@/assets/icons/github.svg";

interface TeamMember {
  name: string;
  role: string;
  description: string;
  github: string;
}

const getInitials = (name: string): string => {
  const names = name.split(' ').filter(n => n.length > 0);
  return names
    .map(n => n[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);
};
---

<section class="section team-section">
  <h2 class="section-title">Meet Our <span class="text-highlight">Passionate</span> Team</h2>
  <p class="section-subtitle">
    A dedicated group of educators, designers, and developers committed to making learning magical
  </p>
  <div class="team-grid">
    {contributors.map((member: TeamMember) => {
      const initials = getInitials(member.name);
      return (
        <div class="team-card">
          <div class="team-image-container">
            <div class="team-avatar" style={`background-color: ${(member.name)}`}>
              {initials}
            </div>
            <div class="team-image-border" />
          </div>
          <h3 class="team-name">{member.name}</h3>
          <p class="team-role">{member.role}</p>
          <p class="team-desc">{member.description}</p>
          <a
            href={`https://github.com/${member.github}`}
            target="_blank"
            rel="noopener noreferrer"
            class="team-github-link"
            aria-label={`${member.name}'s GitHub profile`}
          >
            @{member.github} <GitHub class="github-icon" />
          </a>
        </div>
      );
    })}
  </div>
</section>

<style>
/* Team Section */
.team-section {
  margin-bottom: 4rem;
}

.team-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.team-card {
  background: light-dark(var(--bg-light), var(--bg-secondary));
  border-radius: 1rem;
  padding: 2rem;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.team-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 20px -5px rgba(0, 0, 0, 0.3);
}

.team-image-container {
  position: relative;
  width: 140px;
  height: 140px;
  margin: 0 auto 1.5rem;
}

.team-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 2.5rem;
  font-weight: bold;
  color: white;
  position: relative;
  z-index: 2;
}

.team-image-border {
  position: absolute;
  top: -5px;
  left: -5px;
  right: -5px;
  bottom: -5px;
  border-radius: 50%;
  background: linear-gradient(45deg, var(--primary), var(--accent));
  z-index: 1;
  animation: rotate-border 4s linear infinite;
}

.team-name {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
  color: var(--primary-light);
}

.team-role {
  color: light-dark(var(--bg-dark), var(--text-main));
  font-style: italic;
  margin-bottom: 1rem;
}

.team-desc {
  color: light-dark(var(--bg-dark), var(--text-primary));
  line-height: 1.6;
}

.team-github-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-top: 1rem;
  color: var(--primary-light);
  text-decoration: none;
  transition: color 0.3s ease;
}

.team-github-link:hover {
  color: var(--primary);
}

.github-icon {
  width: 1.5rem;
  height: 1.5rem;
}

@keyframes rotate-border {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@media (max-width: 768px) {
  .team-image-container {
    width: 120px;
    height: 120px;
  }
}
</style>