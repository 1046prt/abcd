---
const { state } = Astro.props;
---

<style>
  .map-container {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 35px;
  }

  .view-controls {
    position: absolute;
    top: 20px;
    display: flex;
    gap: 10px;
    z-index: 100;
  }

  .view-button {
    background-color: #000000;
    color: white;
    border: 3px solid white;
    padding: 8px 16px;
    border-radius: 16px;
    font-family: "Comic Sans MS", cursive, sans-serif;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .view-button:hover {
    transform: scale(1.05);
    background-color: #333;
  }

  .view-button.active {
    background-color: #ff6b6b;
  }

  .district {
    /* width: 100%; */
    height: 100%;
    margin-top: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transform: scale(1.5);
  }

  .district svg {
    height: 21rem;
    margin-top: 20px;
    object-fit: contain;
  }
  .district path {
    transition: fill 0.3s ease;
    fill: #e0f2f1;
  }

  .district path:hover {
    fill: orange;
    stroke: #333;
    stroke-width: 1px;
  }

  .district text {
    font-size: 16px;
    pointer-events: none;
  }

  .district-tooltip {
    position: absolute;
    background-color: #000000; /* Cheerful coral color */
    color: white;
    padding: 12px 16px;
    border-radius: 16px; /* More rounded corners */
    font-size: 16px;
    font-weight: bold;
    font-family: "Comic Sans MS", cursive, sans-serif; /* Kid-friendly font */
    pointer-events: none;
    opacity: 0;
    transition: all 0.3s ease;
    z-index: 1000;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    border: 3px solid white; /* White border for pop-out effect */
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    max-width: 200px;
    text-align: center;
    transform: scale(0.95);
    transform-origin: bottom center;
  }

  .district-tooltip.visible {
    opacity: 1;
    transform: scale(1);
    animation: bounce 0.5s ease;
  }

  /* Fun bounce animation */
  /* @keyframes bounce {
    0% {
      transform: scale(0.95);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  } */

  /* Add a little arrow for tooltip */
  .district-tooltip::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    border-width: 10px 10px 0;
    border-style: solid;
    border-color: #000000 transparent transparent;
  }

  .district-tooltip.visible {
    opacity: 1;
  }

  /* Responsive styles */
  @media (max-width: 1200px) {
    .map-container {
      max-width: 100%;
      padding: 25px;
    }
    .district {
      transform: scale(1.3);
    }
    .district svg {
      height: 20rem;
    }
  }

  @media (max-width: 992px) {
    .map-container {
      padding: 20px;
    }
    .district {
      transform: scale(1.2);
      margin-top: 3rem;
    }
    .district svg {
      height: 18rem;
    }
    .view-controls {
      top: 15px;
    }
    .view-button {
      padding: 6px 12px;
      font-size: 14px;
    }
  }

  @media (max-width: 768px) {
    .map-container {
      padding: 15px;
    }
    .district {
      transform: scale(1.1);
      margin-top: 2.5rem;
    }
    .district svg {
      height: 16rem;
    }
    .view-controls {
      top: 10px;
      flex-direction: row;
      gap: 5px;
    }
    .view-button {
      padding: 5px 10px;
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    .map-container {
      padding: 10px;
    }
    .district {
      transform: scale(0.5);
      margin-top: 2rem;
    }
    .district svg {
      height: 14rem;
    }
    .view-controls {
      top: 5px;
      gap: 3px;
    }
    .view-button {
      padding: 4px 8px;
      font-size: 11px;
    }
  }

  .district path {
    stroke: transparent;
    stroke-width: 1px;
    transition: all 0.3s ease;
  }
</style>

<div class="map-container">
  <div class="view-controls">
    <button class="view-button" data-view="map">Map Only</button>
    <button class="view-button" data-view="boundaries">With Boundaries</button>
    <button class="view-button" data-view="full">Full View</button>
  </div>
  <div class="district">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      version="1.1"
      baseProfile="full"
      viewBox="0 0 800 533"
      preserveAspectRatio="xMidYMid meet"
    >
      <!-- SVG content will be loaded here -->
    </svg>
  </div>
  <div class="district-tooltip" id="tooltip"></div>
</div>

<script define:vars={{ state }}>
  async function loadSVG() {
    try {
      const stateName = state.split(" ").join("");
      const response = await fetch(`../../../public/map/svg/states/${stateName}.svg`);
      if (!response.ok) throw new Error(`HTTP error! Status: ${response.status}`);

      const svgText = await response.text();
      const svgContainer = document.querySelector(".district svg");
      if (svgContainer) {
        svgContainer.innerHTML = svgText;
        processPaths();
        setupViewControls();
      }
    } catch (error) {
      console.error("Error loading SVG:", error);
    }
  }

  function setupViewControls() {
    const buttons = document.querySelectorAll(".view-button");
    const paths = document.querySelectorAll(".district path");
    const texts = document.querySelectorAll(".district text");

    buttons.forEach((button) => {
      button.addEventListener("click", () => {
        // Remove active class from all buttons
        buttons.forEach((btn) => btn.classList.remove("active"));
        // Add active class to clicked button
        button.classList.add("active");

        const view = button.dataset.view;

        // Reset all elements
        paths.forEach((path) => {
          path.style.stroke = "transparent";
          path.style.strokeWidth = "0px";
        });
        texts.forEach((text) => {
          text.style.display = "block";
        });

        // Apply view-specific styles
        switch (view) {
          case "map":
            paths.forEach((path) => {
              path.style.stroke = "transparent";
            });
            texts.forEach((text) => {
              text.style.display = "none";
            });
            break;
          case "boundaries":
            paths.forEach((path) => {
              path.style.stroke = "#333";
              path.style.strokeWidth = "1px";
            });
            texts.forEach((text) => {
              text.style.display = "none";
            });
            break;
          case "full":
            paths.forEach((path) => {
              path.style.stroke = "#333";
              path.style.strokeWidth = "1px";
            });
            texts.forEach((text) => {
              text.style.display = "block";
            });
            break;
        }
      });
    });

    //// Set default view
    buttons[0].click();
  }

  function processPaths() {
    const allPaths = Array.from(document.querySelectorAll(".district path"));
    const halfLength = Math.floor(allPaths.length / 2);
    const paths = allPaths.slice(halfLength);
    const tooltip = document.getElementById("tooltip");
    const texts = document.querySelectorAll("svg text");
    const labels = Array.from(texts)
      .map((el) => el.textContent.trim())
      .filter((text) => text.length > 1);

    paths.forEach((path, index) => {
      path.style.cursor = "pointer";
      const districtName = labels[index + 1];

      path.addEventListener("mouseenter", (e) => {
        path.style.fill = "orange";
        if (!tooltip || !districtName) return;

        tooltip.textContent = path.id === "capital" ? `${districtName}, the Capital of Rajasthan` : districtName;
        tooltip.classList.add("visible");

        const mouseX = e.clientX;
        const mouseY = e.clientY;

        tooltip.style.left = `${mouseX - 250}px`;
        tooltip.style.top = `${mouseY - 120}px`;
        path.style.transition = "fill 0.3s ease, stroke 0.3s ease, stroke-width 0.3s ease";
      });

      path.addEventListener("mouseleave", () => {
        path.style.fill = "";
        if (tooltip) {
          tooltip.classList.remove("visible");
        }
      });
    });
  }

  document.addEventListener("DOMContentLoaded", loadSVG);
</script>