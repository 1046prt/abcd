<section class="math-practice">
  <!-- Header Section -->
  <header>
    <dialog>
      <button autofocus>Close</button>
      <p>This is basic math operation practice.</p>
      <ul>
        <li>Sum of 2 digits</li>
        <li>Subtraction of 2 digits</li>
        <li>Multiplication of 2 digits × 1 digit</li>
      </ul>
      <p>
        Click on the refresh icon to get a new data set in the first 2 boxes. When the answer is correct, a green checkmark will appear near the output.
      </p>
    </dialog>
    <div class="action">
      <a href="/" class="back">Back</a>
    </div>
    <div class="caption">
      <h2>Basic Arithmetic</h2>
    </div>
    <div class="option" id="tip">?</div>
  </header>

  <!-- Operators Section -->
  <section class="operator__container">
    <button class="btn__operator" id="refresh" type="button">
      <span>↻</span>
    </button>
    <button class="btn__operator" id="add" type="button">
      <span>+</span>
    </button>
    <button class="btn__operator" id="subtract" type="button">
      <span>-</span>
    </button>
    <button class="btn__operator" id="multiply" type="button">
      <span>×</span>
    </button>
  </section>

  <!-- Math Form Section -->
  <form>
    <input readonly type="number" id="first" name="b" class="number one" value="0" size="20" />
    <samp id="operator" class="operator">+</samp>
    <input readonly type="number" id="second" name="a" class="number two" value="0" size="20" />
    <samp class="operator">=</samp>
    <input
      type="number"
      id="output"
      name="c"
      class="number output three blinker"
      placeholder="?"
      autofocus
      onKeyPress="if(this.value.length==4) return false;"
    /><span></span>
    <output class="result" id="result" name="result" for="a b"></output>
  </form>
</section>

<style>
  /* Styles for the Math Practice Component */
  header {
    grid-area: header;
    grid-template-columns: minmax(1%, 10%) 1fr auto;
    padding: 0.5rem;
    display: grid;
    align-content: center;
    align-items: center;
    border-bottom: 1px solid grey;
  }

  .operator__container {
    align-content: center;
    align-items: center;
    display: grid;
    grid-auto-flow: column;
    justify-content: space-evenly;
    background-color: cornsilk;
    padding: 0.5rem;
  }

  form {
    padding-inline: 0.5rem;
  }

  .btn__operator {
    font-size: 2rem;
    color: rgb(48, 188, 48);
    cursor: pointer;
    margin-inline: 1rem;
    border: 1px solid rgb(28, 12, 12);
    height: 3rem;
    width: 3rem;
    background-color: black;
    border-radius: 1rem;
  }
</style>
