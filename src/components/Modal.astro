---
const { title = "Information" } = Astro.props ?? {};
---
<dialog open>
    <h2>{title}</h2>
    <slot>Default Modal Content</slot>
</dialog>

<style>
dialog {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    border: 1px solid #ccc;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}
</style>