---

import BaseLayout from "@/layouts/Base"; 
import LetterCard from "@/components/LetterCard.astro";
import BackButton from "@/components/ui/backButton.astro"; 
import "@/assets/styles/varnmala/greek-alphabet.css"; 


import { type GreekAlphabetEntry } from "@/types/alphabet.ts"; 


const pageTitle = "Greek Alphabet";
const category = "greek"; 


const greekAlphabetData: GreekAlphabetEntry[] = [
  { id: 1, letter: "Α α", text: "Alpha", description: "First letter of the Greek alphabet.", code: 913, englishSound: "a" }, 
  { id: 2, letter: "Β β", text: "Beta", description: "Second letter of the Greek alphabet.", code: 914, englishSound: "b" }, 
  { id: 3, letter: "Γ γ", text: "Gamma", description: "Third letter of the Greek alphabet.", code: 915, englishSound: "g" }, 
  { id: 4, letter: "Δ δ", text: "Delta", description: "Fourth letter of the Greek alphabet.", code: 916, englishSound: "d" }, 
  { id: 5, letter: "Ε ε", text: "Epsilon", description: "Fifth letter of the Greek alphabet.", code: 917, englishSound: "e" }, 
  { id: 6, letter: "Ζ ζ", text: "Zeta", description: "Sixth letter of the Greek alphabet.", code: 918, englishSound: "z" }, 
  { id: 7, letter: "Η η", text: "Eta", description: "Seventh letter of the Greek alphabet.", code: 919, englishSound: "i" }, 
  { id: 8, letter: "Θ θ", text: "Theta", description: "Eighth letter of the Greek alphabet.", code: 920, englishSound: "th" }, 
  { id: 9, letter: "Ι ι", text: "Iota", description: "Ninth letter of the Greek alphabet.", code: 921, englishSound: "i" }, 
  { id: 10, letter: "Κ κ", text: "Kappa", description: "Tenth letter of the Greek alphabet.", code: 922, englishSound: "k" }, 
  { id: 11, letter: "Λ λ", text: "Lambda", description: "Eleventh letter of the Greek alphabet.", code: 923, englishSound: "l" }, 
  { id: 12, letter: "Μ μ", text: "Mu", description: "Twelfth letter of the Greek alphabet.", code: 924, englishSound: "m" }, 
  { id: 13, letter: "Ν ν", text: "Nu", description: "Thirteenth letter of the Greek alphabet.", code: 925, englishSound: "n" }, 
  { id: 14, letter: "Ξ ξ", text: "Xi", description: "Fourteenth letter of the Greek alphabet.", code: 926, englishSound: "x" }, 
  { id: 15, letter: "Ο ο", text: "Omicron", description: "Fifteenth letter of the Greek alphabet.", code: 927, englishSound: "o" }, 
  { id: 16, letter: "Π π", text: "Pi", description: "Sixteenth letter of the Greek alphabet.", code: 928, englishSound: "p" }, 
  { id: 17, letter: "Ρ ρ", text: "Rho", description: "Seventeenth letter of the Greek alphabet.", code: 929, englishSound: "r" }, 
  { id: 18, letter: "Σ σ/ς", text: "Sigma", description: "Eighteenth letter. 'ς' is used at word ends.", code: 931, englishSound: "s" }, 
  { id: 19, letter: "Τ τ", text: "Tau", description: "Nineteenth letter of the Greek alphabet.", code: 932, englishSound: "t" }, 
  { id: 20, letter: "Υ υ", text: "Upsilon", description: "Twentieth letter of the Greek alphabet.", code: 933, englishSound: "u" }, 
  { id: 21, letter: "Φ φ", text: "Phi", description: "Twenty-first letter of the Greek alphabet.", code: 934, englishSound: "ph" }, 
  { id: 22, letter: "Χ χ", text: "Chi", description: "Twenty-second letter of the Greek alphabet.", code: 935, englishSound: "ch" }, 
  { id: 23, letter: "Ψ ψ", text: "Psi", description: "Twenty-third letter of the Greek alphabet.", code: 936, englishSound: "ps" }, 
  { id: 24, letter: "Ω ω", text: "Omega", description: "Twenty-fourth letter of the Greek alphabet.", code: 937, englishSound: "o" }, 
];
---

<BaseLayout meta={{ title: pageTitle }}>
  <article class="container__page alphabet-page-container">
    <div class="page-header">
      <BackButton href="/varnmala" />
      <h1 class="page-main-title">{pageTitle}</h1>
      <button id="flip-all-button" class="flip__all__button">Flip All Cards</button>
    </div>

    <div class="grid-container alphabet-grid">
      {
        greekAlphabetData.map((item) => (
          <LetterCard item={item} category={category} />
        ))
      }
    </div>
  </article>

  <script>
    
    const flipAllButton = document.getElementById("flip-all-button") as HTMLButtonElement | null;
    const flipCards = document.querySelectorAll(".flip__card"); 
    let allFlipped = false;

    if (flipAllButton) {
      flipAllButton.addEventListener("click", () => {
        allFlipped = !allFlipped;

        flipCards.forEach((card) => {
          if (allFlipped) {
            card.classList.add("flipped");
          } else {
            card.classList.remove("flipped");
          }
        });

        flipAllButton.textContent = allFlipped ? "Reset All Cards" : "Flip All Cards";
        
        flipAllButton.classList.add("active");
        setTimeout(() => {
          if (flipAllButton) { 
            flipAllButton.classList.remove("active");
          }
        }, 300);
      });
    } else {
      console.warn("Flip All button with ID 'flip-all-button' not found.");
    }
  </script>
</BaseLayout>