---
import BackIcon from "@/assets/icons/back.svg";
import GridGameIcon from "@/assets/icons/grid-game-icon.svg";
import KeyboardGameIcon from "@/assets/icons/keyboard-game-icon.svg";
import "@/assets/styles/games.css";
import GameCard from "@/components/GameCard.astro";
import BaseLayout from "@/layouts/Base";

const meta = {
  title: "Hide and Seek",
  description: "Switch between a hide & seek letter game and a grid."
};

// Define game states
const games = {
  grid: {
    title: "Grid Game",
    description: "Explore an interactive grid-based hide and seek challenge",
    icon: GridGameIcon,
    href: "/hidenseek/grid"
  },
  kbd: {
    title: "Keyboard Game",
    description: "Play a fun letter hiding game using your keyboard",
    icon: KeyboardGameIcon,
    href: "/hidenseek/kbd"
  }
};
---

<BaseLayout meta={meta}>
  <div class="selection-container">
    <div class="header-content">
      <a href="/sample" class="back">
        <BackIcon />
      </a>
      <h1 class="game-page-title">Select a creative mode</h1>
    </div>
    <div class="game-selection-container">
      <div class="game-cards">
        {
          Object.entries(games).map(([route, game]) => (
            <GameCard
              cardType={route as "grid" | "kbd"}
              title={game.title}
              description={game.description}
              href={game.href}
            >
              {route === "grid" && <GridGameIcon slot="grid-icon" />}
              {route === "kbd" && <KeyboardGameIcon slot="keyboard-icon" />}
            </GameCard>
          ))
        }
      </div>
    </div>
  </div>
</BaseLayout>
