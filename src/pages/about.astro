  title: "About Us"
};

// Interfaces
interface TeamMember {
  name: string;
  role: string;
  description: string;
  github: string;
}

interface Feature {
  title: string;
  description: string;
  icon: string;
  color: string;
}

const getInitials = (name: string): string => {
  const names = name.split(' ').filter(n => n.length > 0);
  return names
    .map(n => n[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);
};

